
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_View</title>
</head>
<style>
    body {
        background-color: #808080;
        font-family: 'Segoe UI', Tahoma, 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: bold;
    }

    .container {
        width: 60%;
        background-color: aquamarine;
        border: 10px solid white;
        margin: 20px auto;
    }

    header {
        width: 100%;
        margin: 0;
        height: 10%;
        background-color: bisque;
    }

        header h1 {
            text-align: center;
            margin: 0;
        }

    nav {
        background-color: blueviolet;
        height: 15%;
        width: 100%;
        box-sizing: border-box;
    }

        nav ul {
            text-align: right;
            margin-top: 10px;
        }

            nav ul li {
                padding: 5px 20px;
                border-left: 5px solid white;
                display: inline-block;
            }

                nav ul li a {
                    text-decoration: none;
                    font-weight: bold;
                }

                    nav ul li a:hover {
                        color: aqua;
                    }

    footer {
        width: 100%;
        height: 15%;
        background-color: chartreuse;
        margin-top: 20px;
    }

        footer h2 {
            text-align: center;
            margin: 0px;
        }
</style>
<body>
    <div class="container"> 
        <header>
            <h1>Website của tôi</h1>
        </header>
        <nav>
            <ul>
                <li>@Html.ActionLink("Nhập", "Nhap", "Emps")</li>
                <li>@Html.ActionLink("Xuất list", "XuatList", "Emps")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
        </nav>
        <div>
            @RenderBody()
        </div>
        <div>Cảm ơn các bạn đã ghé webiste</div>
    </div>
</body>
</html>
