
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <form action="/TienDien/XuLy" method="post">
            <table>
                <tr>
                    <td>Chủ hộ: </td>
                    <td>
                        <input name="name" type="text" />
                        <input type="checkbox" name="uutien" />Hộ ưu tiên
                    </td>
                </tr>
                <tr>
                    <td>Loại điện tiêu thụ: </td>
                    <td>
                        <select name="loai">
                            <option>Sinh hoạt</option>
                            <option>Sản xuất</option>
                            <option>Kinh doanh</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>Vào chỉ số cũ: </td>
                    <td><input name="cu" type="text" /> KW</td>
                </tr>
                <tr>
                    <td>Vào chỉ số mới: </td>
                    <td><input name="moi" type="text" /> KW</td>
                </tr>
                <tr>
                    <td colspan="2"><input type="submit" value="Tính" /></td>
                </tr>
            </table>
        </form>
    </div>
</body>
</html>
